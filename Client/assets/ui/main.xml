<vbox width="100%" height="100%" style="background-color: #242424;spacing: 10px;">
    <menubar id="mainMenu" width="100%">
        <menu text="Project">
            <menu-item id="projectCompileAndInject" text="Compile & Inject" icon="icons/settings.png"/>
            <menu-item id="projectCompileAndRestart" text="Compile & Restart" icon="icons/refresh.png" />
            <menu-separator />
            <menu-item id="projectSave" text="Save" icon="icons/save-all.png" />
            <menu-separator />
            <menu-item id="projectImport" text="Import Project" icon="icons/upload.png" />
            <menu-item id="projectDownload" text="Download Project" icon="icons/download.png" />
        </menu>
        <menu text="Resources">
            <menu-item id="resourcesAddSource" text="Add Source..." icon="icons/document.png" />
            <menu-item id="resourcesAddShader" text="Add Shader..." icon="icons/puzzle.png" />
            <menu-item id="resourcesAddAsset" text="Add Asset..." icon="icons/picture.png" />
            <menu-separator />
            <menu-item id="resourcesSaveActive" text="Save Active" icon="icons/save.png" />
            <menu-item id="resourcesSaveAll" text="Save All" icon="icons/save-all.png" />
        </menu>
        <menu text="Help">
            <!--
            <menu-item id="helpExamples" text="Examples..." icon="img/parrot_small.png" />
            -->    
            <menu-item id="helpAbout" text="About..." icon="icons/help.png" />
        </menu>
        
        <spacer width="100%" />
        
        <button id="compileAndInjectButton" text="Compile & Inject" icon="icons/settings.png" />
        <button id="compileAndRestartButton" text="Compile & Restart" icon="icons/refresh.png" />
    </menubar>

    <splitter width="100%" height="100%" style="padding: 10px;spacing: 5px;">
        <splitter direction="vertical" width="42%" height="100%" style="spacing: 5px;">
            <khanvas id="khanvasPanel" width="100%" height="70%" style="background-color: #3a3a3a;border: 1px solid #484848;border-radius: 3px;" />
            <log-manager id="logManager" width="100%" height="30%" style="background-color: #3a3a3a;border: 1px solid #484848;border-radius: 3px;" />
        </splitter>
        
        <vbox width="42%" height="100%">
            <box width="100%" height="100%">
                <tab-manager id="tabManager" width="100%" height="100%" />
            </box>    
        </vbox>
        
        <vbox width="16%" height="100%">
            <project-manager id="projectManager" width="100%" height="100%">
            </project-manager>    
        </vbox>
    </splitter>
</vbox>
